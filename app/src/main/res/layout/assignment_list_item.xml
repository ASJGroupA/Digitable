<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/assignmentTitleText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp"
        android:text="Assignment"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="18sp"
        android:orientation="horizontal">
        <ImageView android:id="@+id/assignmentPriorityImg"
                   android:layout_width="8dp"
                   android:layout_height="8dp"
                   android:layout_gravity="center"
                   android:layout_margin="8dp"
                   android:src="@android:drawable/alert_light_frame"/>

        <TextView
            android:id="@+id/assignmentPriorityText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Priority"
            android:textAllCaps="true"
            android:textSize="16sp"/>


        <TextView
            android:id="@+id/assignmentDeadlineText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="end"
            android:text="Deadline"
            android:textAllCaps="true"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/assignmentDeadlineTimeText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="end"
            android:text="Deadline Time"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>